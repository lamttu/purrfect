<% include ../partials/header %>
    <div class = "container">
        <div class = "row justify-content-center">
            <div class = "col-md-6 col-lg-4">
                <h2 class="form-title text-center">Register a new cat</h2>
                <form class="form-signin" action="/cats" method="POST">
                    <div class = "form-group">
                        <input type = "text" class="form-control" name = "cat[name]" placeholder="Cat's name (Marble, Lily, etc)">
                    </div>
                    <div class = "form-group">
                        <input type = "number" class="form-control" name = "cat[age]" min="0" max = "40" placeholder = "Cat's age">
                    </div>
                    <div class = "form-group">
                        <input type = "text" class="form-control" name = "cat[image]" placeholder = "Cat's image">
                    </div>
                    <div class = "form-group">
                        <textarea name="cat[description]" class="form-control" placeholder="What's your cat like?"></textarea>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Submit!</button>
                </form>
                <p><a href = "/cats">Go back</a></p>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
